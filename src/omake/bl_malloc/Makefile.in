INC_DIR = @top_srcdir@/include

SUBNAME = bl_malloc
SONAME = lib@PACKAGE_NAME@_$(SUBNAME).so
PROG = $(SONAME).@PACKAGE_VERSION@
CFLAGS = @CFLAGS@			\
	-I$(INC_DIR)			\
	-I$(INC_DIR)/common		\
	-I$(INC_DIR)/omake/$(SUBNAME)

LIBS = @LIBS@

SRCS	= bl_malloc_aligned.c
OBJS	= $(SRCS:.c=.o)

OBJS = $(SRCS:.c=.o)

all: $(PROG)

$(PROG): $(OBJS)
	@CC@ -shared -Wl,-soname,$(SONAME) -o $@ $(OBJS) $(LIBS)

.c.o:
	@CC@ -fPIC $(DEFS) $(CFLAGS) -c -o $@ $<

clean:
	rm -f $(OBJS)
	rm -f $(PROG)
